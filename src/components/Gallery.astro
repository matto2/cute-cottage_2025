---
import Layout from "../layouts/Layout2.astro";
import IMG_3452 from "../assets/IMG_3452.jpg";
import IMG_3453 from "../assets/IMG_3453.jpg";
import IMG_3455 from "../assets/IMG_3455.jpg";
import IMG_3456 from "../assets/IMG_3456.jpg";
import IMG_3457 from "../assets/IMG_3457.jpg";
import IMG_3458 from "../assets/IMG_3458.jpg";
import IMG_3460 from "../assets/IMG_3460.jpg";
import IMG_3461 from "../assets/IMG_3461.jpg";
import IMG_3463 from "../assets/IMG_3463.jpg";
import IMG_3464 from "../assets/IMG_3464.jpg";
import IMG_3465 from "../assets/IMG_3465.jpg";
import IMG_3466 from "../assets/IMG_3466.jpg";
import IMG_3467 from "../assets/IMG_3467.jpg";

const images = [
  { src: IMG_3452, alt: "interior" },
  { src: IMG_3453, alt: "interior" },
  { src: IMG_3455, alt: "interior" },
  { src: IMG_3456, alt: "interior" },
  { src: IMG_3457, alt: "interior" },
  { src: IMG_3458, alt: "interior" },
  { src: IMG_3460, alt: "interior" },
  { src: IMG_3461, alt: "interior" },
  { src: IMG_3463, alt: "interior" },
  { src: IMG_3464, alt: "interior" },
  { src: IMG_3465, alt: "interior" },
  { src: IMG_3466, alt: "interior" },
  { src: IMG_3467, alt: "interior" },
];
---

<Layout>
 

  <div class="mt-12 mx-4 md:mx-0 flex">
 
    <div>
      <div class="pswp-gallery columns-1 md:columns-3 2xl:columns-4 gap-5 space-y-6 xl:mx-0" id="botanicalsGallery">
        {
          images.map((image) => (
            <div class="break-inside-avoid mb-6">
              <a
                class="block"
                href={image.src.src}
                data-pswp-width={image.src.width}
                data-pswp-height={image.src.height}
                target="_blank"
              >
                 <div class="w-full h-full overflow-hidden">
  <img
    class="block w-full h-full rounded-3xl object-cover transition-transform duration-500 ease-in-out hover:scale-105"
    src={image.src.src}
    alt={image.alt}
    width={image.src.width}
    height={image.src.height}
  />
</div>
              </a>
              <!-- 
              <p class="text-sm text-left mt-2 text-gray-600">{image.alt}</p> -->
            </div>
          ))
        }
      </div>
    </div>
  </div>

  
</Layout>